print("Введите три числа:")
  a, b, c=map(int, input(). split())
  if a==b==c:
print("Всё числа одинаковые.")
 elif a==b and a!=c:
print("два числа одинаковые")
 elif a==c and a!=b:
print("два числа одинаковые")
 elif b==a and b!=c:
print("два числа одинаковые")
 elif b==c and b!=a:
print("два числа одинаковые")
 elif c==a and c!=b:
print("два числа одинаковые")
 elif c==b and c!=a:
print("два числа одинаковые")
  else:
print("нет одинаковых чисел")
