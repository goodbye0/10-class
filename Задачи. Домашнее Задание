print("Введите номер месяца:")
  a=int(input())
  if a==0 or a>12:
print("Неверный номер месяца")
  elif a==1 or a==2 or a==12:
print("Зима")
  elif a==3 or a==4 or a==5:
print("Весна")
  elif a==6 or a==7 or a==8:
print("Лето")
  elif a==9 or a==10 or a==11:
print("Осень")

